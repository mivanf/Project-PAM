<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="4dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/content1a"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/content1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_notes"
                        android:layout_width="282dp"
                        android:layout_height="28dp"
                        android:fontFamily="@font/jersey10_font"
                        android:text="Hola! [user]"
                        android:textColor="@color/black"
                        android:textSize="32dp" />

                    <TextView
                        android:id="@+id/tv_desc_notes"
                        android:layout_width="282dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/metropolis_font"
                        android:text="Siap menjalani harimu?"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile_notes"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_cari"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_input"
                android:drawableStart="@drawable/ic_search"
                android:hint="Cari notes kamu?"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#c86c9c"
                android:textColorHint="#c86c9c"
                android:drawablePadding="8dp"
                android:inputType="text"
                android:fontFamily="@font/metropolis_font"
                android:textSize="18sp"
                android:elevation="4dp"
                android:layout_margin="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/metropolis_font"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFF8E1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rounded_rectangle_blue">

                    <!-- Kotak Warna dengan Icon -->
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#FFC978">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_main_notes"
                            android:color="@android:color/white"
                            android:contentDescription="Icon Notes" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="vertical">

                        <!-- Judul Kategori -->
                        <TextView
                            android:id="@+id/card_1_judul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notes"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/metropolis_font"
                            android:textStyle="bold"/>

                        <!-- Sub Judul -->
                        <TextView
                            android:id="@+id/card_1_tanggal"
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:text="Tulis catatanmu!"
                            android:textColor="#4591C8"
                            android:textSize="12sp"
                            android:fontFamily="@font/metropolis_font"/>
                    </LinearLayout>

                    <!-- Tombol Next -->
                    <ImageView
                        android:id="@+id/card_1_next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btn_next_blue"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFF8E1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rounded_rectangle_purple">

                    <!-- Kotak Warna dengan Icon -->
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#FFC978">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_main_voice_notes"
                            android:color="@android:color/white"
                            android:contentDescription="Icon Voice Notes" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="vertical">

                        <!-- Judul Kategori -->
                        <TextView
                            android:id="@+id/card_2_judul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voice Notes"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/metropolis_font"
                            android:textStyle="bold"/>

                        <!-- Sub Judul -->
                        <TextView
                            android:id="@+id/card_2_tanggal"
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:text="Simpan catatan suaramu!"
                            android:textColor="#69247C"
                            android:textSize="12sp"
                            android:fontFamily="@font/metropolis_font"/>
                    </LinearLayout>

                    <!-- Tombol Next -->
                    <ImageView
                        android:id="@+id/card_2_next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btn_next_purple"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFF8E1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rounded_rectangle_pink">

                    <!-- Kotak Warna dengan Icon -->
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#FFC978">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_main_document"
                            android:color="@android:color/white"
                            android:contentDescription="Icon Documents" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="vertical">

                        <!-- Judul Kategori -->
                        <TextView
                            android:id="@+id/card_3_judul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Documents"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/metropolis_font"
                            android:textStyle="bold"/>

                        <!-- Sub Judul -->
                        <TextView
                            android:id="@+id/card_3_tanggal"
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:text="Simpan Dokumenmu!"
                            android:textColor="#C84589"
                            android:textSize="12sp"
                            android:fontFamily="@font/metropolis_font"/>
                    </LinearLayout>

                    <!-- Tombol Next -->
                    <ImageView
                        android:id="@+id/card_3_next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btn_next_pink"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFF8E1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rounded_rectangle_yellow">

                    <!-- Kotak Warna dengan Icon -->
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#FFC978">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_main_todolist"
                            android:color="@android:color/white"
                            android:contentDescription="Icon To Do List" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="vertical">

                        <!-- Judul Kategori -->
                        <TextView
                            android:id="@+id/card_4_judul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Do List"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/metropolis_font"
                            android:textStyle="bold"/>

                        <!-- Sub Judul -->
                        <TextView
                            android:id="@+id/card_4_tanggal"
                            android:layout_width="202dp"
                            android:layout_height="wrap_content"
                            android:text="Tulis daftar kegiatanmu!"
                            android:textColor="#D48B20"
                            android:textSize="12sp"
                            android:fontFamily="@font/metropolis_font"/>
                    </LinearLayout>

                    <!-- Tombol Next -->
                    <ImageView
                        android:id="@+id/card_4_next"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btn_next_yellow"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>